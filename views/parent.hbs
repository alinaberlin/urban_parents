<div>
  <form action="/parent" method="post">
    <label for="username">User Name:</label>
    <input type="text" name="username" value="{{parent.username}}">

    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" value="{{parent.firstName}}">

    <label for="lastName">Last Name:</label>
    <input type="text" name="lastName" value="{{parent.lastName}}">

    <label for="email">Email:</label>
    <input type="text" name="email" value="{{parent.email}}">

    <label for="age">Age:</label>
    <input type="text" name="age" value="{{parent.age}}">

    <label for="gender">Gender:</label>
    <input type="text" name="gender" value="{{parent.gender}}">

    <label for="">Languages</label>
    <input type="text" name="language" value="{{parent.language}}">

    <label for="">Nationality </label>
    <input type="text" name="nationality" value="{{parent.nationality}}">
    <!-- Location definition start -->
    <label for="address">Address</label>
    <input type="string" step="any" name="address" value="{{parent.address}}">
    <label for="postcode">Postcode</label>
    <input type="string" step="any" name="postcode" value="{{parent.postcode}}">
    <label for="city">City</label>
    <input type="text" step="any" name="city" value="{{parent.city}}">
    <label for="country">Country</label>
    <input type="text" step="any" name="country" value="{{parent.country}}">
    <!-- Location definition end -->
    <label for="">Ocupation:</label>
    <input type="text" name="ocupation" value="{{parent.ocupation}}">

    <label for="">Picture </label>
    <input type="text" name="pictureUrl" value="{{parent.pictureUrl}}">

    <label for="">Child Name</label>
    <input type="text" name="childName">

    <label for="">Activity type</label>
    <input type="text" name="activity">

    <button type='submit'> Submit</button>
  </form>
</div>
