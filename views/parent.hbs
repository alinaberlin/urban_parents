<div class="form-group">
  <form action="/parent" method="post">

    <div class="form-group">
      <label for="username">User Name:</label>
      <input type="text" class="form-control" name="username" value="{{parent.username}}">
    </div>

    <div class="form-group">
      <label for="firstName">First Name:</label>
      <input type="text" class="form-control" name="firstName" value="{{parent.firstName}}">
    </div>


    <div class="form-group">
      <label for="lastName">Last Name:</label>
      <input type="text" class="form-control" name="lastName" value="{{parent.lastName}}">
    </div>


    <div class="form-group">
      <label for="email">Email:</label>
      <input type="text" class="form-control" name="email" value="{{parent.email}}">
    </div>


    <div class="form-group">
      <label for="age">Age:</label>
      <input type="text" class="form-control" name="age" value="{{parent.age}}">
    </div>


    <div class="form-group">
      <label for="gender">Gender:</label>
      <input type="text" class="form-control" name="gender" value="{{parent.gender}}">
    </div>


    <div class="form-group">
      <label for="">Languages</label>
      <input type="text" class="form-control" name="language" value="{{parent.language}}">
    </div>


    <div class="form-group">
      <label for="">Nationality </label>
      <input type="text" class="form-control" name="nationality" value="{{parent.nationality}}">
    </div>


    <div class="form-group">
      <label for="address">Address</label>
      <input type="string" step="any" name="address" value="{{parent.address}}">
      <label for="postcode">Postcode</label>
      <input type="string" step="any" name="postcode" value="{{parent.postcode}}">
      <label for="city">City</label>
      <input type="text" step="any" name="city" value="{{parent.city}}">
      <label for="country">Country</label>
      <input type="text" step="any" name="country" value="{{parent.country}}">
    </div>
    <!-- Location definition start -->

    <!-- Location definition end -->
    <div class="form-group">
      <label for="">Ocupation:</label>
      <input type="text" class="form-control" name="ocupation" value="{{parent.ocupation}}">
    </div>

    <div class="form-group">
      <label for="">Picture </label>
      <input type="text" class="form-control" name="pictureUrl" value="{{parent.pictureUrl}}">
    </div>


    <div class="form-group">
      <label for="">Child Name</label>
      <input type="text" class="form-control" name="childName">
    </div>


    <div class="form-group">
      <label for="">Activity type</label>
      <input type="text" class="form-control" name="activity">
    </div>




    <button type='submit' class="btn btn-primary"> Submit</button>
  </form>
</div>