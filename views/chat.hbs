<div id="messages">

</div>
<div>
  <textarea id="chat"></textarea>
  <button onclick="sendMessage()">Send</button>
</div>
<script>
  const ws = new WebSocket('ws://localhost:3001/message/websocket')
  


  ws.onmessage = function (e) {
    const pEl = document.createElement("p");
    console.log(e)
    pEl.innerText = e.data;
    document.getElementById("messages").appendChild(pEl);
  }
  

  ws.onopen = function () {
    console.log('opening...')
    ws.send('hello server')
  }

  ws.onerror = function (error) {
    console.log('WEbSocket error ' + error)
    console.dir(error)
  }
   function sendMessage() {
    ws.send(document.getElementById("chat").value);
    
    //ws.send(document.getElementById("chat").value.(JSON.stringify('it works! Yeeee! :'));
   
  }

   
</script>
